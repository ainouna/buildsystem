+		name = _("VFD-Icons"),
+		description = _("VFD-Icons for ADB ITI-5800S(X)"),
+		where = PluginDescriptor.WHERE_SESSIONSTART,
+		fnc = main)]
+	if config.plugins.vfdicon.extMenu.value:
+		l.append(PluginDescriptor(
+			name = _("Front panel display"),
+			description = _("Front panel display configuration for ADB ITI-5800S(X)"),
+			where = PluginDescriptor.WHERE_PLUGINMENU,
+			icon = _("vfddisplay.png"),
+			fnc = opencfg))
+	return l
